<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.thomasharris.workouttimer">

    <!--  keep the system awake during boring exercise routines  -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".WorkoutTimerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkoutTimer">
        <activity
            android:name="dev.thomasharris.workouttimer.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.WorkoutTimer.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>